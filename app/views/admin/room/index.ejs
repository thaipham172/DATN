<%- include('../layouts/header.ejs') %>

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Phòng Nghỉ</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="/admin">Trang Chủ</a></li>
                            <li class="breadcrumb-item active">Phòng Nghỉ</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách Phòng Nghỉ</h4>
                    <div id="basic-datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                            	<div class="table-responsive">
                                    <table class="table mb-0">
                                        <thead>
                                            <tr>
                                                <th tabindex="0" aria-controls="basic-datatable"
                                                rowspan="1" colspan="1"
                                                >Hình Ảnh</th>
	                                            <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Tên Phòng</th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Số Người
	                                            </th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Giá Phòng
	                                            </th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Danh Mục</th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Trạng Thái
	                                            </th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Tiện Ích Phòng
	                                            </th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Quy Tắc Phòng
	                                            </th>
                                                <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Hình Ảnh
	                                            </th>
	                                            <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Cập Nhật
	                                            </th>
	                                            <th tabindex="0" aria-controls="basic-datatable" rowspan="1"
	                                                colspan="1"
	                                                >Xóa Phòng Nghỉ
	                                            </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% roomList.forEach(function(room) { %>
                                                <tr role="row" class="odd">
                                                    <td style="white-space: unset;"><img style="image-rendering: optimizeQuality;" src="<%= room.Avatar %>" width="100" height="100"></td>
    
                                                    <td style="white-space: unset;"><b><%= room.Name %></b></td>

                                                    <td><%= room.People %> người / phòng</td>

                                                    <td><%= room.Price.toLocaleString() %> VNĐ / đêm</td>
                                                    
                                                    <td><span class='badge badge-warning' style="font-size: 12px;"><%= room.category.Name %></span></td>
    
                                                    <td>
                                                        <% if(room.Status == 1){  %>
                                                            <span class='badge badge-info' style="font-size: 12px;">Phòng Còn Trống</span>
                                                        <% }else{%>
                                                            <span class='badge badge-danger' style="font-size: 12px;">Đang Được Thuê</span>
                                                        <% } %>
                                                    </td>

                                                    <td><a class="btn btn-success" href="/admin/room/<%= room.Id %>/facility/"><i class="bx bxs-extension"></i> TIỆN ÍCH</a> </td>
    
                                                    <td><a class="btn btn-secondary" href="/admin/room/<%= room.Id %>/rule/"><i class="bx bxs-check-shield"></i> QUY TẮC</a></td>
                                                    
                                                    <td><a class="btn btn-info" href="/admin/room/<%= room.Id %>/image/"><i class="bx bxs-image-alt"></i> HÌNH ẢNH</a></td>

                                                    <td><a class="btn btn-primary" href="/admin/room/update/<%= room.Id %>/"><i class="bx bxs-edit"></i> CẬP NHẬT</a> </td>
    
                                                    <td><a class="btn btn-danger" href="/admin/room/delete/<%= room.Id %>/"><i class="bx bxs-trash-alt"></i> XÓA</a></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="dataTables_paginate paging_simple_numbers" id="basic-datatable_paginate">
                                    <ul class="pagination pagination-rounded">
                                        <% for (let i = 1; i <= totalPages; i++) { %>
                                       	    <li style="margin-right: 5px;" class="paginate_button page-item"><a href="/admin/room/?page=<%= i %>" class="page-link"><%= i %></a></li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>
</div>

<%- include('../layouts/footer.ejs') %>
